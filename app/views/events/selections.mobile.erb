<% content_for(:header) do %>
  <%= link_to "Back", @event, "data-rel" => 'back', "data-role" => 'button', "data-rel" => "back", "class" => "ui-btn-left" %>
  <h1>Selections</h1>
<% end %>
<ul data-role="listview">
  <% if @event.open_for_selections? %>
    <li>
      <fieldset class="ui-grid-a">
        <div class="ui-block-a">
          <%= link_to "New Selection", movies_search_path, "data-role" => "button", "data-inline" => "true", "data-icon" => 'Plus' %>
        </div>
      </fieldset>
    </li>
  <% end %>
  <li data-role="list-divider">Official Selections</li>
  <% unless @official.empty? %>
    <% @official.each do |s| %>
      <li class="arrow">
        <a href="<%= url_for(s) %>">
          <%= image_tag(s.poster, :alt => s.movie_name) %>
          <h3><%= s.movie_name %></h3>
          <%= get_stars(s,:small => true) %>
        </a>
        <span class="ui-li-count"><%= s.registered_votes.count %> votes</span>
      </li>
    <% end %>
  <% else %>
    <li>No official selections</li>
  <% end %>
  <li data-role="list-divider">Unofficial Selections</li>
  <% unless @unofficial.empty? %>
      <% @unofficial.each do |s| %>
        <li class="arrow">
          <a href="<%= url_for(s) %>">
            <%= image_tag(s.poster, :alt => s.movie_name) %>
            <h3><%= s.movie_name %></h3>
          </a>
          <span class="ui-li-count"><%= s.registered_votes.count %> votes</span>
        </li>
      <% end %>
  <% else %>
    <li>No official selections</li>
  <% end %>
</ul>

