<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Public:</b>
  <%= @event.public %>
</p>

<p>
  <b>Start:</b>
  <%= @event.start %>
</p>

<p>
  <b>Maxmovies:</b>
  <%= @event.maxmovies %>
</p>

<% if not @event.selections.empty? %>
    <h3>Selections</h3>
    <div class="selections">
        <table class="selections_table">
            <%= render :partial => 'shared/selection', :collection => @event.selections %>
        </table>
    </div>
<% end %>

<% if not @event.confirmed_attendees.empty? %>
    <h3>Confirmed Attendees</h3>
    <div class="attendees">
        <table class="attendees_table">
            <%= render :partial => 'shared/attendee', :collection => @event.confirmed_attendees %>
        </table>
    </div>
<% end %>

<% if not @event.unconfirmed_attendees.empty? %>
    <h3>Unconfirmed Attendees</h3>
    <div class="attendees">
        <table class="attendees_table">
            <%= render :partial => 'shared/attendee', :collection => @event.unconfirmed_attendees %>
        </table>
    </div>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
