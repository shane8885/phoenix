<tr>
  <td><%= event.name %></td>
  <td><%= event.user_id %></td>
  <td><%= event.public %></td>
  <td><%= event.start %></td>
  <% if user_signed_in? %>
    <% if current_user.authorized?(event.user_id) or current_user.invited_to?(event) %>
      <td><%= link_to 'Show', event %></td>
    <% else %>
      <td />
    <% end %>
    <% if current_user.authorized?(event.user_id) %>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, :confirm => 'Are you sure you want to remove this event?', :method => :delete %></td>
    <% else %>
      <td />
      <td />
    <% end %>
  <% end %>
</tr>
