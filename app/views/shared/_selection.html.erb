<tr>
    <td><%= link_to image_tag(selection.poster, :alt => "no image", :height => "60") %></td>
    <td><%= selection.movie_name %></td>
    <td><%= selection.votes %></td>
    <% if current_user.authorized?(selection.user_id) %>
      <td><%= link_to 'Remove',selection, :method => :delete, :confirm => 'Are you sure you want to remove this selection?' %></td>
    <% end %>
</tr>
