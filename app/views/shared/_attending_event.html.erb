<tr>
  <td><%= image_tag( event_poster_url(attending_event), :height => "60") %></td>
  <td><%= attending_event.name %></td>
  <td><%= attending_event.user_id %></td>
  <td><%= Attendance.find_by_event_id_and_attending_id(attending_event.id,current_user.id).selections_remaining %></td>
  <td><%= Attendance.find_by_event_id_and_attending_id(attending_event.id,current_user.id).votes_remaining %></td>
  <td><%= attending_event.start %></td>
  <% if user_signed_in? %>
    <% if current_user.authorized?(attending_event.user_id) or current_user.invited_to?(attending_event) %>
      <td width="30"><%= link_to 'Show', attending_event %></td>
    <% else %>
      <td />
    <% end %>
    <% if current_user.authorized?(attending_event.user_id) %>
      <td width="20"><%= link_to 'Edit', edit_event_path(attending_event) %></td>
      <td width="30"><%= link_to 'Destroy', attending_event, :confirm => 'Are you sure you want to remove this event?', :method => :delete %></td>
    <% else %>
      <td />
      <td />
    <% end %>
  <% end %>
</tr>
