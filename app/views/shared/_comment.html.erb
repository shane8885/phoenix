<tr>
  <td id="row_image">
    <% user = User.find(comment.user_id) %>
    <%= gravatar_image_tag(user.email,:alt => user.username,:class => 'small-gravatar') %><br>
  </td>
  <td id="comment_info">
    <span id="user_name"><%= user.username %><br></span>
    <%= time_ago_in_words(comment.created_at) %> ago
  </td>
  <td>
    <%= comment.comment %></td>
  </td>
</tr>
