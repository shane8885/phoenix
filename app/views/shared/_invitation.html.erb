<tr>
  <td><%= invitation.inviting_id %></td>
  <td><%= invitation.event_id %></td>
  <td>
    <% form_for invitation do |f| %>
      <%= f.hidden_field :confirmed, :value => true %>
      <%= f.submit "Accept" %>
    <% end %>
  <td><%= link_to 'Destroy', invitation, :confirm => 'Are you sure you want to remove this invitation?', :method => :delete %></td>
  </td>
</tr>
