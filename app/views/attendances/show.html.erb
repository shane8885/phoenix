<% content_for(:sidebar) do %>
  <%= render :partial => 'shared/sidebar_event',:object => @attendance.event %>
<% end %>
<h1><%= @attendance.attending.username %>@<%= @attendance.event.name %></h1>
<table>
<tr>
  <td width="100">
    <%= image_tag @attendance.attending.avatar.url(:small) %>
  <td text-align='left'>
    <h1><%= @attendance.attending.username %></h1>
    Confirmed: <%= @attendance.confirmed ? "yes" : "no" %>
  </td>
</tr>
</table>
<div class="span-16 push-1 last">
  <strong>Selections ( <%= @attendance.selections_remaining %> left )</strong><br>
  <% unless @selections.empty? %>
    <p>
    <% @selections.each do |s| %>
      <%= link_to image_tag(s.poster, :alt => s.movie_name, :title => s.movie_name, :height => 80),s %>
    <% end %>
    </p>
  <% else %>
    <p class="indent">No Selections</p>
  <% end %>
  <strong>Votes ( <%= @attendance.votes_remaining %> left )</strong><br>
  <% unless @votes.empty? %>
    <p>
    <% @votes.each do |s| %>
      <%= link_to image_tag(s.poster, :alt => s.movie_name, :title => s.movie_name, :height => 80),s %>
    <% end %>
    </p>
  <% else %>
    <p class="indent">No votes</p>
  <% end %>
  <%= link_to 'Back to event', event_path(@attendance.event) %> | 
  <%= link_to 'Event attendees', attendees_event_path(@attendance.event) %>
</div>
