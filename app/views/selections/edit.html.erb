<% content_for(:sidebar) do %>
  <%= render :partial => 'shared/sidebar_event',:object => @selection.event %>
<% end %>
<h1>Selection for <%= @selection.event.name %></h1>
<div class="box">
  <span class="largefont">Update Selection</span>
  <%= form_for(@selection) do |f| %>
    <%= f.error_messages %>
    <strong>Movie</strong><br>
    <p class="indent"><%= @selection.movie_name %></p>
    <div class="field">
      <%= f.label :votes %><br />
      <%= f.number_field :votes %>
    </div>
    <div class="field">
      <%= f.label :official %><br />
      <%= f.check_box :official %>
    </div>
    <hr>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<%= link_to "Back",selections_event_path(@selection.event) %>
