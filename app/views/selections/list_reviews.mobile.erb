<% content_for(:header) do %>
  <%= link_to "Back", selections_event_path(@selection.event), "data-rel" => 'back', "data-role" => 'button', "class" => "ui-btn-left" %>
  <h1>Reviews</h1>
<% end %>
<ul data-role="listview">
  <li data-role="list-divider"><%= @selection.movie_name %></li>
  <% if not @selection.reviews.empty? %>
    <% @selection.reviews.each do |r| %>
      <li>
        <%= image_tag(r.user.avatar.url(:small)) %>
        <h3><%= r.user.username %></h3>
        <p><%= time_ago_in_words(r.created_at) %> ago</p>
        <%= get_stars_for_review(r,:small => true) %>
        <p><%= r.review %></p>
      </li>
    <% end %>
  <% else %>
    <li><%= link_to 'Review it now',add_review_selection_path(@selection) %></li>
  <% end %>
<div data-role="navbar">
	<ul>
	  <li><%= link_to 'Review it now',add_review_selection_path(@selection), :class => "ui-btn-active", "data-iconpos" => "left", "data-icon" => 'plus' %></li>
	</ul>
</div><!-- /navbar -->
</ul>
