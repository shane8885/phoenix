<table><tr>
<td width="100">
  <%= gravatar_image_tag(@user.email, :alt => @user.username, :class => 'gravatar') %>
  <%= link_to "change", "http://gravatar.com/emails", :target => '_blank' %></td>
<td text-align='left'><h1><%= @user.username %></h1></td>
</table>
<h3>My Events</h3>
<% if not @user.events.empty? %>
  <table class="phoenix_table">
    <%= render :partial => 'shared/event', :collection => @user.events %>
  </table>
<% else %>
  <p>You are not the owner of any events</p>
<% end %>
<h3>Attending Events</h3>
<% if not @user.accepted_invitation_events.empty? %>
  <table class="phoenix_table">
      <%= render :partial => 'shared/attending_event', :collection => @user.accepted_invitation_events %>
  </table>
<% else %>
  <p>You're not attending any events.</p>
<% end %>
<h3>Invitations</h3>
<% if not @user.open_invitations.empty? %>
  <table class="phoenix_table">
      <%= render :partial => 'shared/invitation', :collection => @user.open_invitations %>
  </table>
<% else %>
  <p>You have no invitations.</p>
<% end %>
