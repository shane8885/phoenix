<% content_for(:header) do %>
  <%= link_to "Back", root_url, "data-rel" => 'back', "data-role" => 'button', "class" => "ui-btn-left" %>
  <h1>Sign Up</h1>
<% end %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  Notifications<br />
  <i>(Receive emails?)</i>
  <%= f.label :allow_notifications %> 
  <%= f.check_box :allow_notifications %>
  
  <%= f.label :avatar %><br />
  <i>(select an image to be your avatar)</i><br />
  <%= f.file_field :avatar %>
  <%= f.submit "Sign up" %>
<% end %>

<%= render :partial => "devise/shared/mobile_links" %>

