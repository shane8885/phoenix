<fieldset class="ui-grid-a">
  <div class="ui-block-a">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Sign in", new_session_path(resource_name), "data-role" => 'button', "data-inline" => "true" %>
    <% end -%>
  </div>
  <div class="ui-block-b">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), "data-role" => 'button', "data-inline" => "true" %>
    <% end -%>
  </div>
  <div class="ui-block-c">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), "data-role" => 'button', "data-inline" => "true" %>
    <% end -%>
  </div>
  <div class="ui-block-d">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), "data-role" => 'button', "data-inline" => "true" %>
    <% end -%>
  </div>
  <div class="ui-block-e">
    <%- if devise_mapping.lockable? && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), "data-role" => 'button', "data-inline" => "true" %>
    <% end -%>
  </div>
</fieldset>
